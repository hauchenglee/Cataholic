<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cvCanned01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/canned" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="時效強化"
                android:textColor="#FD96A1"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCanned01Amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="持有數量：0"
                android:tag="0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCanned01Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="100元"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/cvCanned02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/canned" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="效率強化"
                android:textColor="#FD96A1"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCanned02Amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="持有數量：0"
                android:tag="0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCanned02Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="100元"
                android:textStyle="bold"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/cvCanned03">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/canned" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="質量強化"
                android:textColor="#FD96A1"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCanned03Amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="持有數量：0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCanned03Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="100元"
                android:textStyle="bold"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back Shop"
        android:layout_marginTop="20dp"
        android:id="@+id/btCannedBack"/>


</LinearLayout>
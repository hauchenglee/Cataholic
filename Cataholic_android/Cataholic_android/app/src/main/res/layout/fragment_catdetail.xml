<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDetailImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cat003" />


            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cat001"
                android:textAlignment="center"
                android:textColor="#FD96A1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvDetailNarrative"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="So Cute~"
                android:textAlignment="center"
                android:textColor="#555"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作效率    "
                    android:textAlignment="center"
                    android:textColor="#4682B4"
                    android:textSize="15dp" />

                <ProgressBar
                    android:id="@+id/pbSpeed"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="60"
                    android:progress="4"
                    android:progressDrawable="@drawable/progressstyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作品質    "
                    android:textAlignment="center"
                    android:textColor="#4682B4"
                    android:textSize="15dp" />

                <ProgressBar
                    android:id="@+id/pbUnitMoney"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="60"
                    android:progress="8"
                    android:progressDrawable="@drawable/progressstyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="藥效時間    "
                    android:textAlignment="center"
                    android:textColor="#4682B4"
                    android:textSize="15dp" />

                <ProgressBar
                    android:id="@+id/pbDuration"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="60"
                    android:progress="3"
                    android:progressDrawable="@drawable/progressstyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="賞賜貓奴    "
                    android:textAlignment="center"
                    android:textColor="#4682B4"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvDetailInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500元 / 小時"
                    android:textAlignment="center"
                    android:textColor="#87CEFA"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btDetailFeed"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/buttonfeed" />

                <ImageButton
                    android:id="@+id/btDetailBack"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/buttonback" />
            </LinearLayout>
            <!--String catNarrative;-->
            <!--Integer catPrice;-->
            <!--Integer catInterest;-->
            <!--Integer catDuration;-->
            <!--Integer catSpeed;-->
            <!--Integer catUnitMoney;-->


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvFeedCanned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="370dp"
        android:visibility="gone"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/llFeedCanned02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/canned" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="速度強化"
                        android:textColor="#4682B4" />

                    <TextView
                        android:id="@+id/tvFeedCanned02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="數量：0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFeedCanned03"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/canned" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="質量強化"
                        android:textColor="#4682B4" />

                    <TextView
                        android:id="@+id/tvFeedCanned03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="數量：0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFeedCanned01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/canned" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="時效強化"
                        android:textColor="#4682B4" />

                    <TextView
                        android:id="@+id/tvFeedCanned01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="數量：0" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btFeedCanned"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Back" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>